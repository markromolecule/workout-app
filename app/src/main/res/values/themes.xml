<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme: Default (Blue Background) -->
    <style name="Base.Theme.ByteMeBaby" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/blue</item>  <!-- Default Blue -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Home Theme (for RoutineMainActivity) -->
    <style name="Theme.Home" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dirty_white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.ByteMeBaby" parent="Base.Theme.ByteMeBaby" />
</resources>